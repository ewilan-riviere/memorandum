    "eslint-plugin-standard": "^4.0.1",
    "lint-staged": "^10.2.2",
    "vue-svg-loader": "^0.16.0"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "eslint --fix",
      "git add"
    ],
    "package.json": [
      "sort-package-json",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "plugin:vue/recommended"
    ],
    "rules": {
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "dot-notation": [
        "error",
        {
          "allowPattern": "^$"
        }
      ]
    },
    "root": true
  }
}
